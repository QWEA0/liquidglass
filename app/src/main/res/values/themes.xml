<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LiquidGlass" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Window 背景模糊支持 (API 31+) -->
        <item name="android:windowBackgroundBlurRadius" tools:targetApi="s">50dp</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- 半透明主题 - 支持 Window 背景模糊 -->
    <style name="Theme.LiquidGlass.Translucent" parent="Theme.LiquidGlass">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!-- Window 背景模糊 (API 31+) -->
        <item name="android:windowBackgroundBlurRadius" tools:targetApi="s">50dp</item>
    </style>
</resources>