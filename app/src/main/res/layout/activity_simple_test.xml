<?xml version="1.0" encoding="utf-8"?>
<!--
    简化测试界面 - 按钮固定在屏幕中央

    使用自定义容器,按钮完全固定,背景可滚动
-->
<com.example.liquidglass.FixedGlassContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 可滚动的背景层 -->
    <ScrollView
        android:id="@+id/backgroundScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/backgroundLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 顶部紫色渐变 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="@drawable/gradient_background_1" />

            <!-- 蓝色渐变 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="@drawable/gradient_background_2" />

            <!-- 橙色渐变 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="@drawable/gradient_background_3" />

            <!-- 绿色渐变 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="@drawable/gradient_background_4" />

        </LinearLayout>

    </ScrollView>

    <!-- 固定在屏幕中央的玻璃按钮 -->
    <com.example.liquidglass.LiquidGlassView
        android:id="@+id/glassButton"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Glass Button"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

    </com.example.liquidglass.LiquidGlassView>

</com.example.liquidglass.FixedGlassContainer>

